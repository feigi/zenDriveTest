<?xml version='1.0' encoding='utf-8'?>
<widget id="org.core_concepts.zendrivetest" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ZendriveTest</name>
    <description>
        A test application for the Zendrive library
    </description>
    <author email="chris.ziegler@core-concepts.de">
        Christian Ziegler
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.5.4" />
    <engine name="android" spec="^7.0.0" />
    <plugin name="com-zendrive-phonegap-sdk" spec="https://github.com/trackerup/zendrive-sdk-phonegap-plugin.git#v0.1.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
</widget>
